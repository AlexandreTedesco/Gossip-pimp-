
<h1>S'inscrire</h1>
<%= form_with(model: @user, local: true) do |form| %>
  
  <div class="form-group">
    <%= form.label :first_name, "PrÃ©nom" %>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, "Nom" %>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email, "E-mail" %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :age, "Ã‚ge" %>
    <%= form.number_field :age, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :city_id, "Ville" %>
    <%= form.select :city_id, City.all.collect { |c| [c.name, c.id] }, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password, "Mot de passe" %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, "Confirmer le mot de passe" %>
    <%= form.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <%= form.submit "S'inscrire", class: 'btn btn-primary' %>
<% end %>

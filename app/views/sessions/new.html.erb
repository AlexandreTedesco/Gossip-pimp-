<!DOCTYPE html>
<html>
<head>
  <title>Gossip page</title>
</head>
<body>
  <div class="container">
    <div class="container">
      <h1>Se connecter</h1>

      <% if flash[:error] %>
        <div class ="alert alert-danger">
          <%= flash[:error] %>
        </div>
      <% end %>

      <%= form_with(url: sessions_path, method: :post, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, class: 'form-control' %>
        </div>

      <%= form.submit "Se connecter", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
</body>
</html>
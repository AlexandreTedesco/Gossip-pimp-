<!DOCTYPE html>
<html>
<head>
  <title>Welcome page</title>
</head>
<body>
  <div class="container">
    <div class="container">
      <h1>Modifier le commentaire</h1>
      <%= form_with(model: @comment, url: gossip_comment_path(@comment), local: true) do |form| %>
      <div class="field">
        <%= form.label :content %>
        <%= form.text_area :content, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :user_id, "Auteur" %>
        <%= form.select :user_id, User.all.collect { |u| [u.first_name, u.id] }, {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :gossip_id, "Gossip" %>
        <%= form.select :gossip_id, Gossip.all.collect { |g| [g.title, g.id] }, {}, class: "form-control" %>
      </div>

        <%= form.submit "Mettre Ã  jour", class: "btn btn-primary"  %>
    <% end %>
    </div>
  </div>
</body>




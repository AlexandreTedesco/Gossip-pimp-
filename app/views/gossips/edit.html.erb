<!DOCTYPE html>
<html>
<head>
  <title>Gossip page</title>
</head>
<body>
  <div class="container">
    <div class="navbar" style="width: 100%;">
      <div class="card-body">
        <nav class="navbar rounded navbar-expand-lg navbar-dark bg-dark">
        <span class="navbar-brand mb-0 h1"><%= link_to "THE GOSSIP PROJECT", home_path, class: "navbar-brand" %></span>
        <%= link_to "Contacter nous", contact_path, class: "navbar-brand" %>
        <%= link_to "Notre équipe", team_path, class: "navbar-brand" %>
        </nav>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="container">
      <% if flash[:error] %>
        <div class ="alert alert-danger">
          <%= flash[:error] %>
        </div>
      <% end %>
       <h1>Modifier le gossip</h1>
      <%= form_with(model: @gossip, url: gossip_path(@gossip), method: :patch, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, "Titre" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content, "Contenu" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user_id, "Auteur" %>
    <%= form.select :user_id, User.all.collect { |u| [u.first_name, u.id] }, {}, class: "form-control" %>
  </div>

  <%= form.hidden_field :city_id, value: @gossip.city_id %>

    <div class="form-group">
      <%= form.label :tag_id, "Tag" %>
      <%= form.select :tag_id, Tag.all.collect { |t| [t.title, t.id] }, {}, class: "form-control"%>
    </div>
    
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <%= form.submit "Mettre à jour", class: "btn btn-primary" %>
<% end %>
<!DOCTYPE html>
<html>
<head>
  <title>Gossip page</title>
</head>
<body>
  <div class="container">
    <div class="container">
      <% if flash[:error] %>
        <div class ="alert alert-danger">
          <%= flash[:error] %>
        </div>
      <% end %>
      <h2>Cr√©er un nouveau Gossip</h2>
        <%= form_with(model: @gossip, url: gossips_path, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :title, "Titre" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :content, "Contenu" %>
          <%= form.text_area :content, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :tag_id, "Tag" %>
          <%= form.select :tag_id, Tag.all.collect { |t| [t.title, t.id] }, {}, class: "form-control"%>
        </div>
    
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <%= form.submit "Soumettre le gossip", class: "btn btn-outline-success" %>
      <% end %>
    </div>
  </div>
</body>
